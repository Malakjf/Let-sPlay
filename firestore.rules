rules_version = '2';

service cloud.firestore {
  match /databases/letsplay/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
             get(/databases/letsplay/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }
    
    // Helper function to check if user is organizer or admin
    function isOrganizerOrAdmin() {
      return isAuthenticated() && 
             get(/databases/letsplay/documents/users/$(request.auth.uid)).data.role in ['Admin', 'Organizer'];
    }
    
    // Helper function to check if user is coach
    function isCoach() {
      return isAuthenticated() && 
             get(/databases/letsplay/documents/users/$(request.auth.uid)).data.role == 'Coach';
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users collection
    match /users/{userId} {
      // Anyone authenticated can read user data
      allow read: if isAuthenticated();
      
      // Users can create their own profile during signup
      allow create: if isAuthenticated() && request.auth.uid == userId;
      
      // Users can update their own profile
      // Admins can update any profile
      // Coaches can update player profiles (but not role field)
      allow update: if isOwner(userId) || 
                       isAdmin() || 
                       (isCoach() && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role']));
      
      // Only admins can delete users
      allow delete: if isAdmin();
    }

    // Matches collection
    match /matches/{matchId} {
      // Anyone authenticated can read matches
      allow read: if isAuthenticated();
      
      // Only organizers and admins can create/update/delete matches
      allow create, update, delete: if isOrganizerOrAdmin();
    }

    // Fields collection
    match /fields/{fieldId} {
      // Anyone authenticated can read fields
      allow read: if isAuthenticated();
      
      // Only organizers and admins can create/update/delete fields
      allow create, update, delete: if isOrganizerOrAdmin();
    }

    // Role requests collection
    match /roleRequests/{requestId} {
      // Users can read their own role requests, admins can read all
      allow read: if isAuthenticated() && 
                     (request.auth.uid == resource.data.userId || isAdmin());
      
      // Authenticated users can create role requests
      allow create: if isAuthenticated();
      
      // Only admins can update or delete role requests
      allow update, delete: if isAdmin();
    }
  }
}
